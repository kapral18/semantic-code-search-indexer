{
  "name": "code-indexer",
  "version": "1.0.0",
  "bin": {
    "mcp-server": "dist/src/mcp_server/bin.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "mkdir -p dist/libs/es-query/src/kuery/grammar && cp libs/es-query/src/kuery/grammar/grammar.js dist/libs/es-query/src/kuery/grammar/grammar.js && mkdir -p dist/src/mcp_server/tools && cp src/mcp_server/tools/*.md dist/src/mcp_server/tools/",
    "build:kql": "npx peggy -o libs/es-query/src/kuery/grammar/grammar.js libs/es-query/src/kuery/grammar/grammar.peggy",
    "lint": "eslint . --ext .ts",
    "index": "NODE_OPTIONS=--max-old-space-size=8192 ts-node src/index.ts index",
    "search": "ts-node src/index.ts search",
    "incremental-index": "ts-node src/index.ts incremental-index",
    "setup": "ts-node src/index.ts setup",
    "test": "jest",
    "prepare": "npm run build",,
    "mcp-server": "ts-node src/mcp_server/bin.ts",
    "mcp-server:http": "ts-node src/mcp_server/bin.ts http"
  },
  "keywords": [],
  "author": "",
  "license": "SSPL-1.0",
  "dependencies": {
    "@elastic/elasticsearch": "^9.1.1",
    "@google-cloud/pubsub": "^5.2.0",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@types/cli-progress": "^3.11.6",
    "@types/lodash": "^4.17.20",
    "@types/moment": "^2.11.29",
    "@types/moment-timezone": "^0.5.13",
    "@xenova/transformers": "^2.17.2",
    "cli-progress": "^3.12.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "glob": "^11.0.3",
    "ignore": "^7.0.5",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "p-queue": "^8.1.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-go": "^0.23.4",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-typescript": "^0.23.2",
    "vscode-languageserver-protocol": "^3.17.5"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^4.2.3",
    "@types/express": "^5.0.3",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "jest": "^30.1.1",
    "peggy": "^5.0.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-pegjs": "^4.2.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
